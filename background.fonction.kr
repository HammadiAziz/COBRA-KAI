void generate_Clips(SDL_Rect Clips[5], int frames, int frameWidth, int clipWidth, int clipHeight)
{
    int i, w;
    for (w = 0, i = 0; i < frames; i++, w += frameWidth)
    {
        Clips[i].x = w;
        Clips[i].y = 0;
        Clips[i].w = clipWidth;
        Clips[i].h = clipHeight;
    }
}


